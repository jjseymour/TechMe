<%= form_for(@user, class: "login-form", role: "form") do |f| %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control", placeholder: "Enter Password", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Enter Password", required: true %>
  </div>

  <%= f.submit "Sign Up", class: "btn btn-primary" %>

<% end %>
